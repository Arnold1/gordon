{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "LambdaAliasS3Version": {
            "Type": "String"
        },
        "LambdaVersionS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "SleepS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "HelpersSleep": {
            "DependsOn": [
                "SleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda_helpers_sleep.zip",
                    "S3ObjectVersion": {
                        "Ref": "SleepS3Version"
                    }
                },
                "Description": "Sleeps several seconds before succeeding.",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "SleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaAliasCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdasLambdaAlias"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "LambdaAliasVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "LambdaAliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "LambdaAliasRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaAliasLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:CreateAlias",
                                        "lambda:DeleteAlias",
                                        "lambda:GetAlias",
                                        "lambda:UpdateAlias"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaAliasReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "LambdaAliasVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdasLambdaAlias"
                },
                "S3ObjectVersion": {
                    "Ref": "LambdaAliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "LambdaVersionCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdasLambdaVersion"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "LambdaVersionVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "LambdaVersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "LambdaVersionRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaVersionLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:PublishVersion",
                                        "lambda:GetFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaVersionReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "LambdaVersionVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdasLambdaVersion"
                },
                "S3ObjectVersion": {
                    "Ref": "LambdaVersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "LambdasLambdaAlias": {
            "DependsOn": [
                "LambdaAliasRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda_lambdas_lambda_alias.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaAliasS3Version"
                    }
                },
                "Description": "Manages aliases of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaAliasRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdasLambdaVersion": {
            "DependsOn": [
                "LambdaVersionRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda_lambdas_lambda_version.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaVersionS3Version"
                    }
                },
                "Description": "Publishes new versions of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaVersionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "SleepCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "HelpersSleep"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "SleepVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "SleepS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "SleepRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "SleepLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "SleepVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "HelpersSleep"
                },
                "S3ObjectVersion": {
                    "Ref": "SleepS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        }
    }
}