{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "KinesisIntegrationArn": {
            "Type": "String"
        },
        "KinesisconsumerS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "AWS Region",
            "Type": "String"
        },
        "SleepS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "ContribHelpersSleep": {
            "DependsOn": [
                "SleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_helpers_sleep.zip",
                    "S3ObjectVersion": {
                        "Ref": "SleepS3Version"
                    }
                },
                "Description": "Sleeps several seconds before succeeding.",
                "Handler": "sleep.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "SleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "ExampleKinesisIntegration": {
            "DependsOn": [
                "ExampleKinesisIntegrationSleep",
                "KinesisconsumerCurrentalias"
            ],
            "Properties": {
                "BatchSize": 1,
                "Enabled": true,
                "EventSourceArn": {
                    "Ref": "KinesisIntegrationArn"
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "KinesisconsumerCurrentalias",
                        "Arn"
                    ]
                },
                "StartingPosition": "LATEST"
            },
            "Type": "AWS::Lambda::EventSourceMapping"
        },
        "ExampleKinesisIntegrationSleep": {
            "DependsOn": [
                "SleepCurrentalias"
            ],
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "SleepCurrentalias",
                        "Arn"
                    ]
                },
                "Time": 30
            },
            "Type": "Custom::Sleep"
        },
        "ExampleappKinesisconsumer": {
            "DependsOn": [
                "KinesisconsumerRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "exampleapp_kinesisconsumer.zip",
                    "S3ObjectVersion": {
                        "Ref": "KinesisconsumerS3Version"
                    }
                },
                "Description": "",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "KinesisconsumerRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "KinesisconsumerCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappKinesisconsumer"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "KinesisconsumerVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "KinesisconsumerRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "KinesisconsumerLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "kinesis:DescribeStream",
                                        "kinesis:ListStreams",
                                        "kinesis:GetShardIterator",
                                        "kinesis:GetRecords"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:kinesis:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "KinesisconsumerReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "KinesisconsumerVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappKinesisconsumer"
                }
            },
            "Type": "AWS::Lambda::Version"
        },
        "SleepCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "SleepVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "SleepRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "SleepLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "SleepVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                }
            },
            "Type": "AWS::Lambda::Version"
        }
    }
}