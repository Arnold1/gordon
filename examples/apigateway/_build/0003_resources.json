{
    "Parameters": {
        "ApiResourceS3Version": {
            "Type": "String"
        },
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "LambdaAliasS3Version": {
            "Type": "String"
        },
        "LambdaVersionS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "RestApiS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "ApiMyApi": {
            "DependsOn": [
                "LambdaApigatewayRestApi"
            ],
            "Properties": {
                "Description": "My first API",
                "Name": "my-api",
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaApigatewayRestApi",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::APIGatewayRestAPI"
        },
        "ApiResourceCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaApigatewayApiResource"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "ApiResourceVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "ApiResourceS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "ApiResourceMyApiHello": {
            "DependsOn": [
                "LambdaApigatewayApiResource"
            ],
            "Properties": {
                "ParentId": "/",
                "PathPart": "hello",
                "RestApiId": {
                    "Fn::GetAtt": [
                        "ApiMyApi",
                        "Id"
                    ]
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaApigatewayApiResource",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::APIGatewayResource"
        },
        "ApiResourceRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "ApiResourceLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "apigateway:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:apigateway:*::/*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "ApiResourceManageApiPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "ApiResourceVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaApigatewayApiResource"
                },
                "S3ObjectVersion": {
                    "Ref": "ApiResourceS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "LambdaAliasCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaLambdasLambdaAlias"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "LambdaAliasVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "LambdaAliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "LambdaAliasRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaAliasLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:CreateAlias",
                                        "lambda:DeleteAlias",
                                        "lambda:GetAlias",
                                        "lambda:UpdateAlias"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaAliasReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "LambdaAliasVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaLambdasLambdaAlias"
                },
                "S3ObjectVersion": {
                    "Ref": "LambdaAliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "LambdaApigatewayApiResource": {
            "DependsOn": [
                "ApiResourceRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda:apigateway:api_resource.zip",
                    "S3ObjectVersion": {
                        "Ref": "ApiResourceS3Version"
                    }
                },
                "Description": "Manages an API Resource",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "ApiResourceRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaApigatewayRestApi": {
            "DependsOn": [
                "RestApiRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda:apigateway:rest_api.zip",
                    "S3ObjectVersion": {
                        "Ref": "RestApiS3Version"
                    }
                },
                "Description": "Manages a RESTAPI",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "RestApiRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaLambdasLambdaAlias": {
            "DependsOn": [
                "LambdaAliasRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda:lambdas:lambda_alias.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaAliasS3Version"
                    }
                },
                "Description": "Manages aliases of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaAliasRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaLambdasLambdaVersion": {
            "DependsOn": [
                "LambdaVersionRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda:lambdas:lambda_version.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaVersionS3Version"
                    }
                },
                "Description": "Publishes new versions of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaVersionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaVersionCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaLambdasLambdaVersion"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "LambdaVersionVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "LambdaVersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "LambdaVersionRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaVersionLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:PublishVersion",
                                        "lambda:GetFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaVersionReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "LambdaVersionVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaLambdasLambdaVersion"
                },
                "S3ObjectVersion": {
                    "Ref": "LambdaVersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "RestApiCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaApigatewayRestApi"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "RestApiVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "RestApiS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "RestApiRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "RestApiLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "apigateway:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:apigateway:*::/*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "RestApiManageApiPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "RestApiVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaApigatewayRestApi"
                },
                "S3ObjectVersion": {
                    "Ref": "RestApiS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaLambdasLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        }
    }
}