{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "DynamoIntegrationArn": {
            "Type": "String"
        },
        "DynamoconsumerS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "AWS Region",
            "Type": "String"
        },
        "SleepS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "ContribHelpersSleep": {
            "DependsOn": [
                "SleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_helpers_sleep.zip",
                    "S3ObjectVersion": {
                        "Ref": "SleepS3Version"
                    }
                },
                "Description": "Sleeps several seconds before succeeding.",
                "Handler": "sleep.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "SleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "DynamoconsumerCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "DynamoconsumerVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "DynamoconsumerRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "dynamodb:DescribeStream",
                                        "dynamodb:ListStreams",
                                        "dynamodb:GetShardIterator",
                                        "dynamodb:GetRecords"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:dynamodb:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerReadDynamoPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "DynamoconsumerVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                }
            },
            "Type": "AWS::Lambda::Version"
        },
        "ExampleDynamoIntegration": {
            "DependsOn": [
                "ExampleDynamoIntegrationSleep",
                "DynamoconsumerCurrentalias"
            ],
            "Properties": {
                "BatchSize": 1,
                "Enabled": true,
                "EventSourceArn": {
                    "Ref": "DynamoIntegrationArn"
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "DynamoconsumerCurrentalias",
                        "Arn"
                    ]
                },
                "StartingPosition": "LATEST"
            },
            "Type": "AWS::Lambda::EventSourceMapping"
        },
        "ExampleDynamoIntegrationSleep": {
            "DependsOn": [
                "SleepCurrentalias"
            ],
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "SleepCurrentalias",
                        "Arn"
                    ]
                },
                "Time": 30
            },
            "Type": "Custom::Sleep"
        },
        "ExampleappDynamoconsumer": {
            "DependsOn": [
                "DynamoconsumerRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "exampleapp_dynamoconsumer.zip",
                    "S3ObjectVersion": {
                        "Ref": "DynamoconsumerS3Version"
                    }
                },
                "Description": "",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "DynamoconsumerRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "SleepCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "SleepVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "SleepRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "SleepLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "SleepVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                }
            },
            "Type": "AWS::Lambda::Version"
        }
    }
}