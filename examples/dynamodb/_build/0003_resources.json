{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "DynamoIntegrationArn": {
            "Type": "String"
        },
        "Region": {
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "DynamoconsumerRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "dynamodb:DescribeStream",
                                        "dynamodb:ListStreams",
                                        "dynamodb:GetShardIterator",
                                        "dynamodb:GetRecords"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:dynamodb:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerReadDynamoPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "ExampleDynamoIntegration": {
            "DependsOn": [
                "ExampleDynamoIntegrationSleep",
                "ExampleappDynamoconsumer"
            ],
            "Properties": {
                "BatchSize": 1,
                "Enabled": true,
                "EventSourceArn": {
                    "Ref": "DynamoIntegrationArn"
                },
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                },
                "StartingPosition": "LATEST"
            },
            "Type": "AWS::Lambda::EventSourceMapping"
        },
        "ExampleDynamoIntegrationSleep": {
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "UtilsGordonContribUtilsSleep",
                        "Arn"
                    ]
                },
                "Time": 30
            },
            "Type": "Custom::Sleep"
        },
        "ExampleappDynamoconsumer": {
            "DependsOn": [
                "DynamoconsumerRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "dynamoconsumer.zip"
                },
                "Description": "",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "DynamoconsumerRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "GordonContribUtilsSleepRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "GordonContribUtilsSleepLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "UtilsGordonContribUtilsSleep": {
            "DependsOn": [
                "GordonContribUtilsSleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "gordon_contrib_utils_sleep.zip"
                },
                "Description": "CloudFormation Lambda which sleeps Time seconds before succeeding.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "GordonContribUtilsSleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        }
    }
}